<!DOCTYPE html>
<html>
  <head>
    <title>ID Check</title>
    <link rel="stylesheet" href="/stylesheets/styles.css" />
  </head>
  <body class="login-body">
    <div class="login-form-container" style="width: 80%">
      <h2 class="login-title">List of All Users</h2>
      <form
        action="/idcheck/search"
        method="get"
        style="margin-bottom: 20px; display: flex; justify-content: center"
      >
        <input
          type="text"
          name="search"
          placeholder="Search users..."
          required
          style="
            width: 35%;
            height: 64px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
          "
        />
        <input
          class="form-submit"
          type="submit"
          value="Search"
          style="
            width: 20%;
            height: 64px;
            text-align: center;
            font-size: 1.2em;
            margin: 0px 20px;
            
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
          "
        />
      </form>

      <% if (typeof errorMessage !== 'undefined') { %>
      <div class="alert alert-danger">
        <div class="error-message"><%= errorMessage %></div>
      </div>
      <% } %>
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col" style="width: 50%">ID</th>
            <th scope="col" style="width: 50%">Name</th>
          </tr>
        </thead>
      </table>
      <div class="table-body">
        <table class="table table-striped table-dark">
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td style="width: 50%"><%= user.engineer_id %></td>
              <td style="width: 50%"><%= user.engineer_name %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div style="display: flex; justify-content: center; margin-top: 20px">
        <button
          class="form-submit"
          onclick="location.href='/login'"
          style="width: 30%; text-align: center"
        >
          Back to Login
        </button>
      </div>
    </div>
  </body>
</html>
